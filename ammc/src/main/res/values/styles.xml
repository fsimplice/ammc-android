<resources>

    <style name="amm" parent="Theme.AppCompat.NoActionBar" >
        <item name="colorPrimary">@color/amm_grey</item>
    </style>

    <style name="amm_text_white">
        <item name="android:textColor">@color/amm_white</item>
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="amm_text_white_edittext">
        <item name="android:textColor">@color/amm_white</item>
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:ems">15</item>
    </style>

    <style name="amm_spinner">
        <item name="android:colorBackground">@color/amm_grey</item>
    </style>

    <style name="amm_text_red_background" parent="amm_text_white">
        <item name="android:colorBackground">@color/amm_red</item>
    </style>

    <style name="amm_edit_text" parent="amm_text_white">
        <item name="android:editTextBackground">@color/amm_light_grey</item>
    </style>
</resources>
